<p><%= link_to 'New Budget', new_budget_path, class: 'btn btn-primary' %></p>

<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Budgets</h3>
  </div>
  <div class="panel-body">

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Weekly Deposit</th>
          <th colspan="2">&nbsp;</th>
        </tr>
      </thead>
      <% @budgets.each do |budget| %>
        <tr>
          <td><%= budget.name %></td>
          <td><%= smart_number_to_currency(budget.weekly_deposit) %></td>
          <td><%= link_to 'Edit', edit_budget_path(budget) %></td>
          <td><%= link_to 'Delete', budget_path(budget), 'data-confirm' => "Are you sure you want to delete #{budget.name}?", 'data-method' => 'delete' %></td>
        </tr>
      <% end %>
    </table>
  </div>
